<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Activity start</th>
      <th>Distance</th>
      <th>Hr</th>
      <th>Hr max</th>
      <th>Moving</th>
      <th>Stop</th>
      <th>Speed</th>
      <th>Watts</th>
      <th>Calories</th>
      <th>Kj</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.location %></td>
        <td><%= activity.activity_start %></td>
        <td><%= activity.distance %></td>
        <td><%= activity.hr %></td>
        <td><%= activity.hr_max %></td>
        <td><%= activity.moving %></td>
        <td><%= activity.stop %></td>
        <td><%= activity.speed %></td>
        <td><%= activity.watts %></td>
        <td><%= activity.calories %></td>
        <td><%= activity.kj %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

